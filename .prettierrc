{
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": ["*.js", "*.ts"],
      "options": {
        "tabWidth": 2,
        "printWidth": 100,
        "trailingComma": "all",
        "singleQuote": true,
        "semi": true
      }
    },
    {
      "files": "*.sol",
      "options": {
        "tabWidth": 4,
        "printWidth": 80,
        "compiler": "0.8.15"
      }
    },
    {
      "files": "contracts/LSP6KeyManager/LSP6KeyManagerV2.sol",
      "options": {
        "tabWidth": 4,
        "printWidth": 100,
        "compiler": "0.8.17"
      }
    }
  ]
}
